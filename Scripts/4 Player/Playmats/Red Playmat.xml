<Panel
  id="redField"
  position="0 0 -12"
  rotation="0 0 180"
  width="300" height="200"
  scale="0.1"
>
  <!--DECK IMPORT-->
  <VerticalLayout
    id="redDeckImport"
    position="0 350 0"
    width="2200"
    height="500"
    spacing="50"
    childAlignment="MiddleCenter"
    visibility="Red"
  >
    <InputField
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="160"
      placeholder="Insert deck link here."
      onEndEdit="syncTextFields"
    ></InputField>
    <HorizontalLayout
      preferredHeight="200"
      spacing="50"
      padding="400 400 0 0"
    >
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="160"
        preferredWidth="1000"
        onClick="importDeck"
      >Import Decks</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="160"
        preferredWidth="200"
        onClick="hideDeckImport"
      >X</Button>
    </HorizontalLayout>
  
  </VerticalLayout>

  <!--MEMORY BUTTONS-->
  <Panel
    position="0 -950 0"
    width="2500"
    spacing="20"
    visibility="Red"
  >
    <Button
      position="-1400 0 0"
      width="300"
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="hideMemoryButtons"
    >Hide</Button>
    <HorizontalLayout
      id="redMemoryButtons"
    >
      <Button
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="payOneMemoryCard"
    >Pay 1 Memory</Button>
    <Button
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="revealRandomMemoryCard"
    >Reveal Random</Button>
    <Button
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="recollectMemory"
    >Recollect</Button>
    </HorizontalLayout>
  </Panel>

  <!--MENU BUTTONS-->
  <!--Max Height should be 2000-->
  <Panel
    position="-3400 0 0"
    width="1000" height="1000"
    color="Black"
    visibility="Red"
  >
    <VerticalLayout>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="showDeckImport"
      >Show Import Decks</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="importDeck"
      >Reimport Decks</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="resetPlayspace"
      >Reset Playspace</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="toggleMagnets"
      >Toggle Magnets</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="toggleTrustOthers"
      >Toggle Trust Others</Button>
    </VerticalLayout>
  </Panel>

  <!--DAMAGE TAKEN COUNTER for SELF-->
  <Panel
    position="-1523 820 0"
    width="408" height="250"
    visibility="Red|Green|Grey|Black"
  >
    <VerticalLayout>
      <HorizontalLayout>
        <Button
          colors="(#000000|#222222|#444444)"
          textColor="#8A8A8A"
          fontSize="80"
          onClick="clearDamageTakenCounter"
        >c</Button>
        <Button
          colors="(#000000|#222222|#444444)"
          textColor="#8A8A8A"
          fontSize="80"
          onClick="decrementDamageTakenCounter"
        >-</Button>
        <Button
          colors="(#000000|#222222|#444444)"
          textColor="#8A8A8A"
          fontSize="80"
          onClick="incrementDamageTakenCounter"
        >+</Button>
      </HorizontalLayout>
      <Text
        color="#8A8A8A"
        fontSize="64"
        id="redDamageTakenCounter"
      >0 Damage</Text>
    </VerticalLayout>
  </Panel>

  <!--DAMAGE TAKEN COUNTER for OTHER-->
  <Panel
    position="-1523 820 0"
    rotation="0 0 180"
    width="408" height="250"
    visibility="Blue|Yellow"
  >
    <VerticalLayout>
      <Text
        color="#8A8A8A"
        fontSize="64"
        id="redDamageTakenCounterOpposite"
      >0 Damage</Text>
      <HorizontalLayout id="redDamageTakenCounterButtons" >
        <Button
          colors="(#000000|#222222|#444444)"
          textColor="#8A8A8A"
          fontSize="80"
          onClick="incrementDamageTakenCounter"
        >+</Button>
        <Button
          colors="(#000000|#222222|#444444)"
          textColor="#8A8A8A"
          fontSize="80"
          onClick="decrementDamageTakenCounter"
        >-</Button>
        <Button
          colors="(#000000|#222222|#444444)"
          textColor="#8A8A8A"
          fontSize="80"
          onClick="clearDamageTakenCounter"
        >c</Button>
      </HorizontalLayout>
    </VerticalLayout>
  </Panel>

