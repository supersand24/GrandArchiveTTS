<Panel
  id="bluePanel"
  width="220" height="100"
  position="0 -50 -15"
  rotation="0 0 180"
  scale="0.1"
  visibility="Blue"
>
  <Button
    width="200" height="200" position="750 -300 0"
    onClick="onCloseDeckImportButtonPressed"
    fontSize="120"
    fontStyle="Bold"
    >X</Button>
  <Button
    width="1200" height="300" position="0 -300 0"
    onClick="onImportDeckButtonPressed"
    fontSize="160"
    fontStyle="Bold"
  >Import Decks</Button>
  <InputField
    width="2200" height="200" position="0 0 0"
    fontSize="160"
    fontStyle="Bold"
    placeholder="https://build.silvie.org/"
    onEndEdit="syncTextFields">
  </InputField>
</Panel>

<HorizontalLayout
  id="memoryButtons"
  width="2500" height="150"
  position="0 95 -15"
  rotation="0 0 180"
  scale="0.1"
  spacing="20"
>
    <Button
      colors="(#000000|#222222|#888888)"
      textColor="#FFFFFF"
      fontSize="100"
      onClick="onPayOneMemoryButtonPressed"
      >Pay 1 Memory</Button>

    <Button
      colors="(#000000|#222222|#888888)"
      textColor="#FFFFFF"
      fontSize="100"
      onClick="onRevealRandomButtonPressed"
      >Reveal Random</Button>

    <Button
      colors="(#000000|#222222|#888888)"
      textColor="#FFFFFF"
      fontSize="100"
      onClick="onRecollectButtonPressed"
      >Recollect</Button>

</HorizontalLayout>