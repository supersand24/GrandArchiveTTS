<Panel
  id="blueField"
  position="0 0 -15"
  rotation="0 0 180"
  width="300" height="200"
  scale="0.1"
  visibility="Blue"
>
  <!--DECK IMPORT-->
  <VerticalLayout
    id="blueDeckImport"
    position="0 350 0"
    width="2200"
    height="500"
    spacing="50"
    childAlignment="MiddleCenter"
  >
    <InputField
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="160"
      placeholder="Insert deck link here."
      onEndEdit="syncTextFields"
    ></InputField>
    <HorizontalLayout
      preferredHeight="200"
      spacing="50"
      padding="400 400 0 0"
    >
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="160"
        preferredWidth="1000"
        onClick="importDeck"
      >Import Decks</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="160"
        preferredWidth="200"
        onClick="hideDeckImport"
      >X</Button>
    </HorizontalLayout>
  
  </VerticalLayout>

  <!--MEMORY BUTTONS-->
  <Panel
    position="0 -950 0"
    width="2500"
    spacing="20"
  >
    <Button
      position="-1400 0 0"
      width="300"
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="hideMemoryButtons"
    >Hide</Button>
    <HorizontalLayout
      id="blueMemoryButtons"
    >
      <Button
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="payOneMemoryCard"
    >Pay 1 Memory</Button>
    <Button
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="revealRandomMemoryCard"
    >Reveal Random</Button>
    <Button
      colors="(#000000|#222222|#444444)"
      textColor="#8A8A8A"
      fontSize="100"
      onClick="recollectMemory"
    >Recollect</Button>
    </HorizontalLayout>
  </Panel>

  <!--MEMORY BUTTONS-->
  <!--Max Height should be 2000-->
  <Panel
    position="3400 0 0"
    width="1000" height="800"
    color="Black"
  >
    <VerticalLayout>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="showDeckImport"
      >Show Import Decks</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="importDeck"
      >Reimport Decks</Button>
      <Button
        colors="(#000000|#222222|#444444)"
        textColor="#8A8A8A"
        fontSize="100"
        onClick="resetPlayspace"
      >Reset Playspace</Button>
    </VerticalLayout>
  </Panel>

</Panel>